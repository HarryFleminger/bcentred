<%= render "shared/nav_menu_dropdown" %>
<div class="main-container-blog">
  <div class="left-column-blog" >
    <%= render "shared/main_nav" %>
  <div class="right-column-blog" >
    <div class="blog-header">
      <h4>Think-Tank for all things <br>Creative, innovate and <br>Transformative</h4>
        <%= image_tag("rollyroller.png", alt: "Revolving Logo", class: "rolling-logo") %>
    </div>
    <div class="horizontal-divider" id="blog-divider"></div>
    <div class="blog-container-grid">
      <% @blog_posts.each do |blog_post| %>
        <%= render "shared/blog_index_card", blog_post: blog_post %>
      <% end %>
    </div>
  </div>
</div>
